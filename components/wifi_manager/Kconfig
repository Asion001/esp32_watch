menu "App: WiFi Manager"

config WIFI_DEFAULT_CREDENTIALS_ENABLE
    bool "Enable default WiFi credentials"
    default n
    help
        Enable build-time default WiFi credentials used when no saved
        credentials exist in NVS.

config WIFI_DEFAULT_SSID
    string "Default WiFi SSID"
    default ""
    depends on WIFI_DEFAULT_CREDENTIALS_ENABLE
    help
        SSID for build-time default WiFi connection.

config WIFI_DEFAULT_PASSWORD
    string "Default WiFi password"
    default ""
    depends on WIFI_DEFAULT_CREDENTIALS_ENABLE
    help
        Password for build-time default WiFi connection.
        Leave empty for open networks.

endmenu
