# Full-featured configuration with WiFi and OTA
CONFIG_IDF_TARGET="esp32c6"
CONFIG_ESPTOOLPY_FLASHMODE_QIO=y
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y
CONFIG_PARTITION_TABLE_CUSTOM=y

# Enable WiFi
CONFIG_ENABLE_WIFI=y
CONFIG_WIFI_AUTO_CONNECT=y

# Enable NTP time sync
CONFIG_NTP_CLIENT_ENABLE=y
CONFIG_NTP_SYNC_ON_WIFI_CONNECT=y
CONFIG_NTP_SYNC_INTERVAL_MIN=720
CONFIG_NTP_DEFAULT_SERVER="pool.ntp.org"
CONFIG_NTP_DEFAULT_TIMEZONE="UTC+0"
CONFIG_NTP_DEFAULT_DST=n

# Enable OTA
CONFIG_ENABLE_OTA=y
CONFIG_OTA_AUTO_CHECK=n
CONFIG_OTA_UPDATE_URL="https://github.com/Asion001/esp32_watch/releases/latest/download/firmware.bin"
CONFIG_OTA_BUFFER_SIZE=4096
CONFIG_OTA_ENABLE_HTTPS=y
CONFIG_OTA_ENABLE_ROLLBACK=y

# Sleep manager
CONFIG_SLEEP_MANAGER_ENABLE=y

# LVGL fonts
CONFIG_LV_FONT_MONTSERRAT_12=y
CONFIG_LV_FONT_MONTSERRAT_14=y
CONFIG_LV_FONT_MONTSERRAT_16=y
CONFIG_LV_FONT_MONTSERRAT_18=y
CONFIG_LV_FONT_MONTSERRAT_20=y
CONFIG_LV_FONT_MONTSERRAT_22=y
CONFIG_LV_FONT_MONTSERRAT_24=y
CONFIG_LV_FONT_MONTSERRAT_26=y
CONFIG_LV_FONT_MONTSERRAT_48=y
